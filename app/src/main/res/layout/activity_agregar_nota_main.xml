<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".AgregarNotaMainActivity"

    android:padding="15dp"
    android:orientation="vertical"    >
        <TextView
            android:id="@+id/tvAgregarNota"
            android:text="@string/txtAgregarNota"

            android:textStyle="bold"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"

            android:layout_marginTop="15dp"
            android:textColor="#673AB7"
            android:textSize="25sp"
            android:padding="10dp"

            />

        <ImageView
            android:id="@+id/ivGuardarNota"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/tvAgregarNota"

            android:layout_marginEnd="5dp"

            android:src="@drawable/icono_check"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TILTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/tvAgregarNota"

            android:layout_marginTop="15dp"
            android:padding="10dp">
            <EditText
                android:id="@+id/etTitulo"

                android:maxLines="1"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="20dp"

                android:hint="@string/etTitulo"
                >

            </EditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TILDescripcion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@id/TILTitulo"
        android:layout_marginTop="15dp"
        android:padding="10dp">

        <EditText
            android:id="@+id/etDescripcion"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:maxLines="1"

            android:textSize="20sp"

            android:hint="@string/edDescripcioin">

        </EditText>


    </com.google.android.material.textfield.TextInputLayout>


</RelativeLayout>